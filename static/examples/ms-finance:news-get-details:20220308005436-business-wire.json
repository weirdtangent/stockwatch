sheet=52591135&newsitemid=20220308005436&lan=en-US&anchor=Facebook&index=9&md5=2766364edba52c4cf809bf42e02478ec","contentObject":[{"type":"text","content":"Facebook","gated":false}],"gated":false},{"type":"text","content":" or the ","gated":false},{"type":"a","href":"https://cts.businesswire.com/ct/CT?id=smartlink&url=https%3A%2F%2Fclicks.zynga.com%2Ff%2Fa%2F48_n9p7IIvbeZ3tCLCBENw%7E%7E%2FAAQRxQA%7E%2FRgRj5nS0P0QbaHR0cHM6Ly93d3cuenluZ2EuY29tL2Jsb2cvVwNzcGNCCmIBtO8DYo1x1w9SFmJwYXJ2aXpzaGFoaUB6eW5nYS5jb21YBAAAAAY%7E&esheet=52591135&newsitemid=20220308005436&lan=en-US&anchor=Zynga+blog&index=10&md5=d2b9af64eec0ad9f1a09e87d5b06bf97","contentObject":[{"type":"text","content":"Zynga blog","gated":false}],"gated":false},{"type":"text","content":".\n","gated":false}],"gated":false},{"type":"p","contentObject":[{"type":"img","src":"https://cts.businesswire.com/ct/CT?id=bwnews&sty=20220308005436r1&sid=mstr3&distro=nx&lang=en","alt":"","variations":[],"gated":false}],"gated":false},{"type":"p","contentObject":[{"type":"text","content":"\nLinda Chung\n","gated":false},{"type":"br","gated":false},{"type":"a","href":"mailto:lchung@zynga.com","contentObject":[{"type":"text","content":"lchung@zynga.com","gated":false}],"gated":false},{"type":"text","content":"\n","gated":false}],"gated":false},{"type":"p","contentObject":[{"type":"text","content":"View source version on businesswire.com: ","gated":false},{"type":"a","href":"https://www.businesswire.com/news/home/20220308005436/en/","contentObject":[{"type":"text","content":"https://www.businesswire.com/news/home/20220308005436/en/","gated":false}],"gated":false}],"gated":false}]}